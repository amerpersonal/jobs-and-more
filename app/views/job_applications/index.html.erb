<p id="notice"><%= notice %></p>

<%= render "jobs/job_info", job: @job %>
<% if @job_applications.empty? %>
  <p class="text-secondary">Still no applications for this job</p>
<% else %>
  <table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Address</th>
      <th scope="col">Competence</th>
      <th scope="col">Applied</th>
    </tr>
  </thead>

  <tbody>
  <% @job_applications.each_with_index do |job_application, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= job_application.first_name %></td>
      <td><%= job_application.last_name %></td>
      <td><%= link_to job_application.email, "mailto:#{job_application.email}" %></td>
      <td><%= job_application.phone_number %></td>
      <td><%= job_application.address %></td>
      <td><%= job_application.competence %></td>
      <td><%= distance_of_time_in_words(job_application.created_at, Time.zone.now).gsub("about ", "") + " ago" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>


<%= link_to 'Back to jobs', jobs_path, class: "mt-2" %>
